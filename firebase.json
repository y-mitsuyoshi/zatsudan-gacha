{
  "hosting": {
    "public": "out",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/profile-maker",
        "destination": "/profile-maker.html"
      },
      {
        "source": "/profile-maker/",
        "destination": "/profile-maker.html"
      },
      {
        "source": "/isekai-status",
        "destination": "/isekai-status.html"
      },
      {
        "source": "/isekai-status/",
        "destination": "/isekai-status.html"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "runtime": "nodejs22"
    }
  ]
}
